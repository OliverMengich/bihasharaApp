<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlockchainProject.RegisterPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Click Button to initiate a new Transaction"
                   FontSize="24"
                   Padding="30,10,30,0"/>
            <Button Text="New Transaction"
                    x:Name="newTransaction"
                    Clicked="newTransaction_Clicked"
                    BackgroundColor="Red"
                    Padding="30,10,30,0"/>
            <Label Text="Click Button to Record minutes"
                   FontSize="24"
                   Padding="30,10,30,0"/>
            <Button Text="MINUTES"
                    x:Name="minutesButton"
                    Clicked="minutesButton_Clicked"
                    BackgroundColor="Red"
                    Padding="30,10,30,0"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>