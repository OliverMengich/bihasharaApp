<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlockchainProject.ConfirmationPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Enter the Confirmation Code you received"
                   Padding="30,30,30,0"
                   FontSize="15"/>
            <Entry Placeholder="confirmation code" MaxLength="100" Margin="30,0,30,0" />
            <Button Text="Confirm" x:Name="confirmButton" Clicked="confirmButton_Clicked" WidthRequest="50"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>